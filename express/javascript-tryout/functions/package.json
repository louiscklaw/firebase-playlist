{
  "name": "functions",
  "description": "Cloud Functions for Firebase",
  "scripts": {
    "serve": "firebase serve",
    "shell": "firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "mocha --reporter spec",
    "docs": "jsdoc -c ../jsdoc.conf.json *.js -d ../docs",
    "docs_w": "nodemon -w . --ext '*' --exec 'npm run docs'",
    "test_w": "nodemon -w . --ext '*.js' --exec 'mocha'"
  },
  "engines": {
    "node": "8"
  },
  "dependencies": {
    "firebase-admin": "^8.6.0",
    "firebase-functions": "^3.3.0",
    "body-parser": "^1.19.0",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "mocha": "^6.2.1",
    "request": "^2.88.0",
    "firebase-functions-test": "^0.1.6"
  },
  "private": true
}
